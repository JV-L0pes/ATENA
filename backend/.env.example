# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Configurações do modelo YOLOv5
MODEL_PATH=yolov5/yolov5n.pt
MODEL_CONF_THRESH=0.35
MODEL_IOU_THRESH=0.45
MODEL_MAX_DETECTIONS=50

# Configurações de vídeo
VIDEO_SOURCE=0
VIDEO_FPS=30
VIDEO_WIDTH=640
VIDEO_HEIGHT=480

# Configurações de detecção
DETECTION_ENABLE_TRACKING=true
DETECTION_FRAME_QUEUE_SIZE=10
DETECTION_RESULT_QUEUE_SIZE=10

# Configurações de performance
PERFORMANCE_MAX_DRAW_FPS=30
PERFORMANCE_MAX_CACHE_SIZE=100
PERFORMANCE_DEBOUNCE_DELAY=100

# Configurações de logging
LOG_LEVEL=INFO

# Configurações de CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Configurações de snapshot
SNAPSHOT_DIR=snapshots
SNAPSHOT_FORMAT=jpg
SNAPSHOT_QUALITY=95

# Configurações de histórico
HISTORY_MAX_ENTRIES=1000
HISTORY_CLEANUP_INTERVAL=3600
